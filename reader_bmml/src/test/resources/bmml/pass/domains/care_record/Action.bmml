abstract class Action
    is_a Care_statement

feature_group ("access")

    |
    | Structured description of the Activity.
    |
    prop activity_id : String ;
	
    |
    | Optional duration of the Activity.
    |
    prop duration :? Duration ;

	|
    | Structured description of the Action.
    |
    prop description : list<Node> ;

	|
    | Transition in the state machine of the Order achieved by this Action.
    |
    prop state_transition :? State_transition ;

end

