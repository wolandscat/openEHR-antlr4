import org.splash-lang.foundation.representation ;


|
| Commit container for one collection of statements, for one encounter between a 
| subject and a care provision system.
|
abstract class Event_context 
    is_a Info_item

feature_group("access")

    |
    | Facility.
    |
    prop facility :? Entity_ref_node ;

    |
    | Physical location, e.g. 'ward 3'.
    |
    prop location :? String ;

    |
    | Start time.
    |
    prop start_time : Date_time ;

    |
    | End time.
    |
    prop end_time :? Date_time ;

    |
    | Participations.
    |
    prop participations :? list<Participation> ;

    |
    | Other context.
    |
    prop other_context :? list<Node> ;

end




