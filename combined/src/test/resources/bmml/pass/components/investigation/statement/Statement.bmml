import org.splash-lang.foundation.representation ;


|
| Abstract parent of Statement types.
|
abstract class Statement 
    is_a Content_item

feature_group("access")

    |
    | Uuid of this Statement. Use UUID7 or other variant form that starts with time, to 
	| ensure coherent indexing.
    |
    prop uid : Uuid ;

    |
    | Language of this Statement, if different from the owning Composition.
    |
    prop language :? Terminology_code «iso.iso_639-1» ;

    |
    | Subject of this Statement, i.e. subject of investigation. Usually a patient.
    |
    prop subject : Entity_ref_node ;

    |
    | Reporter of this Statement.
    |
    prop reporter : Participation ;

    |
    | Other participations involved in the acts creating this Statement.
    |
    prop other_participations :? list<Participation> ;

    |
    | Time of occurrence of the relevant real world process entity.
    |
    prop occurrent_time : Date_time ;

    |
    | Reference to workflow that caused this Statement to be created.
    |
    prop workflow_id :? String ;

    |
    | Reference to an Order that caused the act generating this Statement.
    |
    prop related_order : Entity_ref_node ;

    |
    | Comments.
    |
    prop comment :? Text ;

end




