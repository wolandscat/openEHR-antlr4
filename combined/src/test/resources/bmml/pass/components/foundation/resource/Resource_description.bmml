import org.splash-lang.foundation.representation.base_types ;


|
| Detailed description of the resource.
|
class Resource_description 
    is_a Any

feature_group("access")

    |
    | Details of the original author.
    |
    prop original_author : String:String [*; map] ;

    |
    | Original namespace.
    |
    prop original_namespace : String ;

    |
    | Original publisher.
    |
    prop original_publisher :? String ;

    |
    | Other contributors, each in the form of a String, with the standard embedded
    | email or web address, e.g. `"Marcus Aurelius <marcus@meditations.org>"`.
    |
    prop other_contributors :? String [*; list] ;

    |
    | Other details
    |
    prop other_details :? String:String [*; map] ;

    |
    | Current custodian namespace.
    |
    prop custodian_namespace :? String ;

    |
    | Current custodian publisher.
    |
    prop custodian_organisation :? String ;

    |
    | Copyright text.
    |
    prop copyright :? String ;

    |
    | License name and/or URL.
    |
    prop licence :? String ;

    |
    | Lifecycle state.
    |
    prop lifecycle_state : String ;

    |
    | URI of resource package, if applicable.
    |
    prop resource_package_uri :? String ;

    |
    | Copyright IP acknowledgements.
    |
    prop ip_acknowledgements :? String:String [*; map] ;

    |
    | References for citations within `description`.
    |
    prop references :? String:String [*; map] ;

    |
    | Details of conversion, if applicable, from other artefact and/or format.
    |
    prop conversion_details :? String:String [*; map] ;

    |
    | Reference to a parent resource, if applicable.
    |
    prop parent_resource :? Authored_resource ;

    |
    | Details of description, keyed by language
    |
    prop details :? String:Resource_description_item [*; map] ;

end




