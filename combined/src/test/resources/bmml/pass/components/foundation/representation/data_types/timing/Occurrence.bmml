import org.splash-lang.foundation.representation.base_types ;

|
| Single occurrence of an event expressed as date, optional time(s) of day,
| and possibly an upper date, to indicate duration
|
class Occurrence
    is_a Any

feature_group("access")

    prop date : Date;

    prop date_upper :? Date;

    prop times_of_day :? list<Hour_specifier>;

end

