import org.splash-lang.foundation.representation.base_types ;


abstract class Event 
    is_a Locatable

feature_group("access")

    |
    | Time of event.
    |
    prop time : Date_time ;

    |
    | Information items captured in this Event
    |
    prop items : list<Node> ;

end




