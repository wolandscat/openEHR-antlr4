import org.splash-lang.foundation.representation.base_types ;

class Timing 
    is_a Data_value

feature_group("access")

    |
    | History of specific occurrences
    |
    prop history :? Occurrence [*; list];

    |
    | Pattern representation of occurrences
    |
    prop pattern :? Occurrence_pattern;

    prop event_duration :? Duration;
    
    prop event_duration_upper :? Duration;

invariant
    value_validity: assert □history and !history.empty or □pattern;

end
