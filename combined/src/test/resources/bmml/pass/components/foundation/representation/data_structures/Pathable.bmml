import org.splash-lang.foundation.representation.base_types ;


abstract class Pathable 
    is_a Any

feature_group("infrastructure")

    |
    | Return items at a path, assuming it exists. Always returns a container,
    | even if there is only one item.
    |
    func items_at_path (a_path: String) : Pathable [*; list]
        pre: has_item_at_path (a_path: String)
        ;

    |
    | True if there is an item at path `a_path`.
    |
    func has_item_at_path (a_path: String) : Boolean
        ;

end




