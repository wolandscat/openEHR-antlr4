import org.splash-lang.foundation.representation.base_types ;


class Measured <V: Measurable>
    is_a Ordered_datum

feature_group("access")

    prop value : V;

    prop reference_ranges :? Reference_range<V> [*; ordered];

feature_group("runtime")

    |
    | Accuracy of the measurement, expressed as a half-range, either with
    | measurement units, or with '%' pseudo-units
    | Example: 0.1V means ±0.1V; 3% means ±3%
    |
    prop accuracy :? Quantity;

    prop value_status :? Comparison_operator;
    
    prop interpretation : Coded_text «splash-lang.QuantitativeInterpretation»;

    prop interpretation_guide :? Text;

end
