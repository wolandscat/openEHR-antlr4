abstract class Order
    is_a Care_statement

feature_group ("access")

    |
    | Focal data of the Observation.
    |
    prop narrative : Text ;

    |
    | Optional expiry for this Order.
    |
	prop expiry_time :? Date_time ;
	
    |
    | Performable activities in this Order.
    |
    prop activities : list<Activity> ;

end

