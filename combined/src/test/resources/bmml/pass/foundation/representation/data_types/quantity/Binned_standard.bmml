import org.splash-lang.foundation.representation.base_types ;


|
| Used to record measured values that are reported as terms that identify bins,
| such as `{"small", "medium", "large"}`, where the quantity ranges for each bin are standardised. 
| The rank establishes the ordering.
| Conceptually similar to a `Binned_value`, except that `bin_name` is coded.
|
class Binned_standard 
    is_a Ordered_value

feature_group("access")

    prop rank : Integer;

    prop bin_name : Terminology_term;

end
