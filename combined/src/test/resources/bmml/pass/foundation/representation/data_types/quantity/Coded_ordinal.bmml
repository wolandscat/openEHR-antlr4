import org.splash-lang.foundation.representation.base_types ;


|
| Used to record values that are reported as terms that are considered ordered, such as `{"small", "medium", "large"}`
| The rank establishes the ordering.
|
class Coded_ordinal 
    is_a Ordered_value

feature_group("access")

    prop rank : Integer;

    prop concept : Terminology_term;

end
