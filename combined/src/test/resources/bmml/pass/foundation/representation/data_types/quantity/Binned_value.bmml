import org.splash-lang.foundation.representation.base_types

|
| A measurement reported in a 'binned' fashion i.e. as a range (often termed a 'bucket' or 'bin'). 
| The bin is from a series of ranges, some of which may not be numerically specified, e.g. 'trace'.
|
class Binned_value 
    is_a Measurable

feature_group("access")

    range: Text [1];

    |
    | Numeric ranking allows ordering of numeric and non-numeric ranges to be defined 
    |
    rank: Integer [0..1];

    range_lower: Decimal [0..1];

    range_upper: Decimal [0..1];

    units: Terminology_term [0..1];

    |
    | A textual description or reference to an online resource describing the value
    | stratification of which this is an instance
    |
    description: Text [1];

end



