import org.splash-lang.foundation.representation.base_types ;

abstract class Text 
    is_a Data_value 

feature_group ("access")

    prop text : String;

feature_group ("infrastructure")

    prop language :? Terminology_code «iso.iso_639-1»;

    prop encoding :? Terminology_code  «iana.character-sets»;

feature_group ("runtime")

    prop formatting :? Text_format_types;

end


