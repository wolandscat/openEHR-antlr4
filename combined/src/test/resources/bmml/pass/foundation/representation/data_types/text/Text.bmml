import org.splash-lang.foundation.representation.base_types

abstract class Text 
    is_a Data_value 

feature_group ("access")

    text: String;

feature_group ("infrastructure")

    language: Terminology_code?;

    encoding: Terminology_code?;

feature_group ("runtime")

    formatting: Text_format_types?;

end


