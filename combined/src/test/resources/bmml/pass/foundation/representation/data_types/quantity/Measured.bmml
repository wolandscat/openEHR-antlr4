import org.splash-lang.foundation.representation.base_types


class Measured <V: Measurable>
    is_a Ordered_datum

feature_group("access")

    value: V [1];

    reference_ranges: Reference_range<V> [*, list];

feature_group("runtime")

    accuracy: Quantity [0..1];

    value_status: Comparison_operator [0..1];
    
    interpretation: Coded_text <<splash-lang.QuantitativeInterpretation>> [0..1];

    interpretation_guide: Text [0..1];

end
