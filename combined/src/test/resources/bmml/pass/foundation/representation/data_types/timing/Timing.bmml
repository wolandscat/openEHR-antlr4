import org.splash-lang.foundation.representation.base_types

class Timing 
    is_a Data_value

feature_group("access")

    |
    | History of specific occurrences
    |
    history:? Occurrence [*, list];

    |
    | Pattern representation of occurrences
    |
    pattern:? Occurrence_pattern;

    event_duration:? Duration;
    
    event_duration_upper: Duration?

invariant

    Value_validity = ∃history and !history.empty or ∃pattern;

end
